<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.skytoper.budgettracker" >

    <uses-sdk android:minSdkVersion="15"
        android:maxSdkVersion="18" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <application
        android:name="com.skytopper.budgettracker.BudgetTrackerApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.skytopper.budgettracker.activities.CompanyActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.skytopper.budgettracker.activities.InventoryActivity"
            android:label="@string/title_activity_inventory"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.skytopper.budgettracker.activities.MainActivity"
            android:label="MainActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.skytopper.budgettracker.activities.SummaryActivity"
            android:label="@string/title_activity_summary"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>
