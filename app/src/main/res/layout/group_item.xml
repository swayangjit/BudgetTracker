<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_gravity="center"
android:orientation="horizontal"
android:paddingLeft="@dimen/size_7_menu"
android:paddingBottom="@dimen/size_5"
android:paddingTop="@dimen/size_5"
android:paddingRight="@dimen/size_15" >

<ImageView
    android:id="@+id/img_drawer"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/size_2"
    android:layout_marginLeft="@dimen/size_6"
    android:layout_marginRight="@dimen/size_10" />

<com.skytopper.budgettracker.customviews.BudgetTrackerTextView
    android:id="@+id/textTitle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:textColor="@color/profile_background"
    android:textSize="@dimen/size_15"
    android:textStyle="bold" />

</LinearLayout>