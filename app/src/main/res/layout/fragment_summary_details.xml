<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:scrollbars="none"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/grey"
                android:gravity="center"
                android:layout_marginRight="1dp"
                android:padding="8dp">
            <com.skytopper.budgettracker.customviews.BudgetTrackerTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="2dp"
                android:paddingTop="2dp"
                android:text="@string/name"
                android:textSize="13dp"
                android:textStyle="bold"
                android:textColor="@color/black1" />
                </LinearLayout>
            <com.skytopper.budgettracker.customviews.BudgetTrackerTextView
                android:id="@+id/txt_inventory_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="2dp"
                android:paddingTop="2dp"
                android:text=""
                android:gravity="center"
                android:textSize="13dp"
                android:textStyle="bold"
                android:textColor="@color/black1" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/grey"
                    android:gravity="center"
                    android:padding="8dp"
                    android:layout_marginRight="1dp">
                    <com.skytopper.budgettracker.customviews.BudgetTrackerTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="2dp"
                        android:paddingTop="2dp"
                        android:text="@string/unit"
                        android:textSize="13dp"
                        android:textStyle="bold"
                        android:textColor="@color/black1" />
                </LinearLayout>
                <com.skytopper.budgettracker.customviews.BudgetTrackerTextView
                    android:id="@+id/txt_inventory_unit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="2dp"
                    android:paddingTop="2dp"
                    android:text=""
                    android:gravity="center"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:textColor="@color/black1" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/grey"
                    android:gravity="center"
                    android:layout_marginRight="1dp"
                    android:padding="8dp">
                    <com.skytopper.budgettracker.customviews.BudgetTrackerTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="2dp"
                        android:paddingTop="2dp"
                        android:text="@string/category"
                        android:textSize="13dp"
                        android:textStyle="bold"
                        android:textColor="@color/black1" />
                </LinearLayout>
                <com.skytopper.budgettracker.customviews.BudgetTrackerTextView
                    android:id="@+id/txt_inventory_category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="2dp"
                    android:paddingTop="2dp"
                    android:text=""
                    android:gravity="center"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:textColor="@color/black1" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/grey"
                    android:gravity="center"
                    android:layout_marginRight="1dp"
                    android:padding="8dp">
                    <com.skytopper.budgettracker.customviews.BudgetTrackerTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="2dp"
                        android:paddingTop="2dp"
                        android:text="@string/subcategory"
                        android:textSize="13dp"
                        android:textStyle="bold"
                        android:textColor="@color/black1" />
                </LinearLayout>
                <com.skytopper.budgettracker.customviews.BudgetTrackerTextView
                    android:id="@+id/txt_inventory_subcategory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="2dp"
                    android:paddingTop="2dp"
                    android:text=""
                    android:gravity="center"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:textColor="@color/black1" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/grey"
                    android:gravity="center"
                    android:layout_marginRight="1dp"
                    android:padding="8dp">
                    <com.skytopper.budgettracker.customviews.BudgetTrackerTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="2dp"
                        android:paddingTop="2dp"
                        android:text="@string/created_date"
                        android:textSize="13dp"
                        android:textStyle="bold"
                        android:textColor="@color/black1" />
                </LinearLayout>
                <com.skytopper.budgettracker.customviews.BudgetTrackerTextView
                    android:id="@+id/txt_inventory_created_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="2dp"
                    android:paddingTop="2dp"
                    android:text=""
                    android:gravity="center"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:textColor="@color/black1" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/grey"
                    android:gravity="center"
                    android:layout_marginRight="1dp"
                    android:padding="8dp">
                    <com.skytopper.budgettracker.customviews.BudgetTrackerTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="2dp"
                        android:paddingTop="2dp"
                        android:text="@string/quantity"
                        android:textSize="13dp"
                        android:textStyle="bold"
                        android:textColor="@color/black1" />
                </LinearLayout>
                <com.skytopper.budgettracker.customviews.BudgetTrackerTextView
                    android:id="@+id/txt_inventory_quantity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="2dp"
                    android:paddingTop="2dp"
                    android:text=""
                    android:gravity="center"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:textColor="@color/black1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/grey"
                    android:gravity="center"
                    android:layout_marginRight="1dp"
                    android:padding="8dp">
                    <com.skytopper.budgettracker.customviews.BudgetTrackerTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="2dp"
                        android:paddingTop="2dp"
                        android:text="@string/cost"
                        android:textSize="13dp"
                        android:textStyle="bold"
                        android:textColor="@color/black1" />
                </LinearLayout>
                <com.skytopper.budgettracker.customviews.BudgetTrackerTextView
                    android:id="@+id/txt_inventory_cost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="2dp"
                    android:paddingTop="2dp"
                    android:text=""
                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:textColor="@color/black1"
                    android:gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/grey"
                    android:gravity="center"
                    android:layout_marginRight="1dp"
                    android:padding="8dp">
                    <com.skytopper.budgettracker.customviews.BudgetTrackerTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="2dp"
                        android:paddingTop="2dp"
                        android:text="@string/value"
                        android:textSize="13dp"
                        android:textStyle="bold"
                        android:textColor="@color/black1" />
                </LinearLayout>
                <com.skytopper.budgettracker.customviews.BudgetTrackerTextView
                    android:id="@+id/txt_inventory_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="2dp"
                    android:paddingTop="2dp"
                    android:text=""
                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:textColor="@color/black1"
                    android:gravity="center"/>
            </LinearLayout>



        </LinearLayout>


    </HorizontalScrollView>

</ScrollView>


